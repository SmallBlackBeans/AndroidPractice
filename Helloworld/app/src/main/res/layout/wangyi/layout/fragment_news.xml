<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/base_common_default_icon_small"
            android:layout_margin="6dp"
            />

        <TextView
            android:id="@+id/nav_right_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5/24"
            android:textSize="15sp"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/nav_right_money"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_menu_gold"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/nav_right_num"/>

        <ImageView
            android:id="@+id/nav_right_search"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_menu_search"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/nav_right_money"/>


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inner_tabs">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewPaper">

        </android.support.v4.view.ViewPager>
    </FrameLayout>



</LinearLayout>